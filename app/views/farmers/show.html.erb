<h1><%= @farmer.name %></h1>
<p><%= @farmer.location %></p>

<h2>Products</h2>

<div class="products">
  <% @farmer.products.each do |product| %>
    <div class="product-card">
      <h3><%= product.name %></h3>
      <p>Price: Rs <%= product.price %></p>
      <button>Add to Cart</button>
    </div>
  <% end %>
</div>

<%= link_to "Back to Farmers", farmers_path %>
