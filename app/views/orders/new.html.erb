<h1>Payment Details</h1>

<%= simple_form_for :payment, url: orders_path do |f| %>
  <div class="form-group">
    <%= f.input :card_number, label: "Card Number", input_html: { placeholder: "1234 5678 9012 3456" } %>
    <%= f.input :expiration, label: "Expiration Date", input_html: { placeholder: "MM/YY" } %>
    <%= f.input :cvv, label: "CVV", input_html: { placeholder: "123" } %>
  </div>

  <%= f.button :submit, "Pay Now", class: "btn btn-success" %>
<% end %>

<h3>Order Summary</h3>
<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Qty</th>
      <th>Unit Price</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% @cart.cart_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td>Rs <%= item.product.price %></td>
        <td>Rs <%= item.product.price * item.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><strong>Total Price: Rs <%= @total_price %></strong></p>

<hr>
