<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="container-fluid">
        <%= link_to "GreenMarket", root_path, class: "navbar-brand" %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto">
                <% if user_signed_in? %>
                <li class="nav-item active">
                    <%= link_to "HOME", root_path, class: "nav-link" %>
                </li>
                <li class="nav-item active">
                    <%= link_to "ABOUT", root_path, class: "nav-link" %>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">ACCOUNT</a>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <%= link_to "My Account", my_account_path, class: "dropdown-item" %>
                        <%# <%= link_to "Sign Up", "#", class: "dropdown-item" %>
                        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
                    </div>
                </li>
                <li class="nav-item">
                    <%= link_to notifications_path, class: "nav-link" do %>
                    <span class="nav-icon">
                        <i class="fa-solid fa-bell"></i>
                        <% if @unread_notifications.present? %>
                        <small class="notif-count"><%= @unread_notifications.count %></small>
                        <% end %>
                    </span>
                    <% end %>
                </li>
                <li class="nav-item">
                    <%= link_to cart_path(@farmer), class: "nav-link" do %>
                    <span class="nav-icon">
                        <i class="fa-solid fa-cart-shopping"></i>
                        <% if @cart_item_count.to_i > 0 %>
                        <small class="cart-item-count"><%= @cart_item_count %></small>
                        <% end %>
                    </span>
                    <% end %>
                </li>
                <% else %>
                <li class="nav-item">
                    <%= link_to "Login", new_user_session_path, class: "nav-link" %>
                </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>
